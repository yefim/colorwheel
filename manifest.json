{
  "manifest_version": 2,
  "name": "colorwheel",
  "version": "1.0.2",
  "description": "colorwheel converts and previews color. It can parse Hex strings, RGB strings, and a comma delineated list of RGB values.",
  "icons": {
		"16": "images/colorwheel16.png",
		"48": "images/colorwheel48.png",
		"128":"images/colorwheel128.png"
	},
  "browser_action": {
    "default_icon": "images/colorwheel16.png",
    "default_title": "colorwheel",
    "default_popup": "colorwheel.html"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
